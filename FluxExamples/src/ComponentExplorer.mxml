<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:flux="http://openflux.googlecode.com" 
	xmlns:controls="com.openflux.examples.controls.*" layout="absolute">
	
	<mx:Text text="OpenFlux Component Exporer" fontSize="24" fontWeight="bold" top="10" left="10" />
	<mx:HBox left="10" right="10" top="100" bottom="10">
		<mx:Panel title="Components" width="200" height="100%">
			<mx:List width="100%" height="100%">
				<mx:dataProvider>
					<mx:Array>
						<mx:Object label="Button" />
						<mx:Object label="Container" />
						<mx:Object label="List" />
					</mx:Array>
				</mx:dataProvider>
			</mx:List>
		</mx:Panel>
		<mx:Panel title="Settings" width="300" height="100%">
			<controls:ListSettings component="{container}" width="100%" height="100%" />
		</mx:Panel>
		<mx:Panel title="Result" width="100%" height="100%">
			<flux:Container id="container" width="100%" height="100%">
				<mx:DateField />
				<mx:Button label="Button" />
				<mx:TextInput />
				<mx:RadioButton label="Radio" />
				<mx:HSlider />
				<mx:CheckBox label="Checkbox" />
			</flux:Container>
		</mx:Panel>
	</mx:HBox>
</mx:Application>