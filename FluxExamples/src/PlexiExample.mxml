	<mx:VBox left="20" right="20" top="20" bottom="20">
		<mx:ComboBox id="combo" dataProvider="{layouts}" labelField="label" change="(list.view as IContainerView).layout = combo.selectedItem.layout" />
		<mx:HBox width="100%" height="100%">
			<flux:List id="list" dataProvider="{data1}" width="100%" height="100%" styleName="fluxList" />
			<mx:List dataProvider="{list.selectedItems}" width="100%" height="100%" />
		</mx:HBox>
	</mx:VBox>
