<FluxView xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns="http://www.openflux.org/2008">
	
	<content>
		<Button id="upButton" label="up" top="0" bottom="0" left="0" />
		<Button id="downButton" label="dn" top="0" bottom="0" right="0" />
		<Button id="track" top="0" bottom="0" left="50" right="50" />
		<Button id="thumb" top="5" bottom="5" left="{ track.x + ( track.width - thumb.width ) * ( component.position / ( component.max - component.min ) ) }" />		
	</content>
	
</FluxView>