<?xml version="1.0" encoding="utf-8"?>
<flux:FluxView xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:flux="http://www.openflux.org/2008"
	xmlns:degrafa="http://www.degrafa.com/2008">
	
	<!-- states -->
	<flux:states>
		<flux:State name="{ ButtonStates.UP }" />
		<flux:State name="{ ButtonStates.OVER }">
			<flux:SetProperty target="{fill}" name="color" value="#E5E5E5" />
		</flux:State>
		<flux:State name="{ ButtonStates.DOWN }">
			<flux:SetProperty target="{fill}" name="color" value="#666666" />
			<flux:SetProperty target="{stroke}" name="color" value="#FFFFFF" />
		</flux:State>
		<flux:State name="{ ButtonStates.SELECTED_UP }" basedOn="{ ButtonStates.UP }">
			<flux:SetProperty target="{line}" name="alpha" value="1" />
		</flux:State>
		<flux:State name="{ ButtonStates.SELECTED_OVER }" basedOn="{ ButtonStates.OVER }">
			<flux:SetProperty target="{line}" name="alpha" value="1" />
		</flux:State>
		<flux:State name="{ ButtonStates.SELECTED_DOWN }" basedOn="{ ButtonStates.DOWN }">
			<flux:SetProperty target="{line}" name="alpha" value="1" />
		</flux:State>
	</flux:states>

	<mx:Script>
		<![CDATA[
			import com.openflux.constants.ButtonStates;
		]]>
	</mx:Script>
	
	<!-- fills and strokes -->
	<degrafa:SolidFill id="fill" color="#FFFFFF" />
	<degrafa:SolidStroke id="stroke" color="#000000" weight="1" caps="round" joints="round" pixelHinting="true" />
	<degrafa:SolidStroke id="line" color="{stroke.color}" alpha="0" weight="2" caps="round" joints="round" pixelHinting="true" />
	
	<flux:content>
		<!-- checkbox -->
		<degrafa:Surface width="14" height="14" verticalCenter="-1">
			<degrafa:GeometryGroup>
				<degrafa:RegularRectangle fill="{fill}" stroke="{stroke}" x="0" y="0" width="14" height="14" />
				<degrafa:Line x="3" y="3" x1="12" y1="12" stroke="{line}" />
				<degrafa:Line x="3" y="12" x1="12" y1="3" stroke="{line}" />
			</degrafa:GeometryGroup>
		</degrafa:Surface>
		
		<!-- label -->
		<flux:Label text="{ component.label }" />
	</flux:content>
	
</flux:FluxView>
